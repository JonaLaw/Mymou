<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/crop_picker_texture"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="#FF0000" />

    <TextView
        android:id="@+id/tv_croppickertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/crop_picker_title"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_left"
        style="@style/CropPickerDirectionTextStyle"
        android:layout_above="@id/crop_left"
        android:text="@string/crop_left_title" />

    <SeekBar
        android:id="@+id/crop_left"
        style="@style/CropPickerDirectionSeekBarStyle"
        android:layout_above="@id/text_right" />

    <TextView
        android:id="@+id/text_right"
        style="@style/CropPickerDirectionTextStyle"
        android:layout_above="@id/crop_right"
        android:text="@string/crop_right_title" />

    <SeekBar
        android:id="@+id/crop_right"
        style="@style/CropPickerDirectionSeekBarStyle"
        android:layout_above="@id/text_top" />

    <TextView
        android:id="@+id/text_top"
        style="@style/CropPickerDirectionTextStyle"
        android:layout_above="@id/crop_top"
        android:text="@string/crop_top_title" />

    <SeekBar
        android:id="@+id/crop_top"
        style="@style/CropPickerDirectionSeekBarStyle"
        android:layout_above="@id/text_bottom" />

    <TextView
        android:id="@+id/text_bottom"
        style="@style/CropPickerDirectionTextStyle"
        android:layout_above="@id/crop_bottom"
        android:text="@string/crop_bottom_title" />

    <SeekBar
        android:id="@+id/crop_bottom"
        style="@style/CropPickerDirectionSeekBarStyle"
        android:layout_above="@id/ll_croppicker_butts" />

    <LinearLayout
        android:id="@+id/ll_croppicker_butts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal" />

</RelativeLayout>
